{
  "manifest_version": 3,
  "name": "Toxic Checking Extension",
  "description": "A Chrome extension that predicts whether comments are likely to be Toxic or Not",
  "version": "1.0",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "http://127.0.0.1:8000/" 
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus", 
    "storage", 
    "notifications"
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
}
}
